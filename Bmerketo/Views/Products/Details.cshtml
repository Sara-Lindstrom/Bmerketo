@model ProductDetailsViewModel

@{
    int i = 0;
}
<partial name="/Views/Partials/_Breadcrumb.cshtml" model="@Model.Breadcrumb"/>

<!-- product specifications -->
<div class="container product-spec">
    <div class="image-container">
        <img class="large-image" src="@($"data:{Model.Product.ProductImages.PrimaryImageMimeType};base64,{Model.Product.ProductImages.PrimaryImageData}")" alt="">

        <div class="small-image-container">
            <img class="small-image" src="@($"data:{Model.Product.ProductImages.ImageOneMimeType};base64,{Model.Product.ProductImages.ImageDataOne}")" alt="">
            <img class="small-image" src="@($"data:{Model.Product.ProductImages.ImageTwoMimeType};base64,{Model.Product.ProductImages.ImageDatatwo}")" alt="">
            <img class="small-image" src="@($"data:{Model.Product.ProductImages.ImagethreeMimeType};base64,{Model.Product.ProductImages.ImageDatathree}")" alt="">
            <img class="small-image" src="@($"data:{Model.Product.ProductImages.ImageFourMimeType};base64,{Model.Product.ProductImages.ImageDatafour}")" alt="">
        </div>
    </div>

    <div class="product-specifications">
        <h6 class="product-name">@Model.Product.Product.Title</h6>
        <p class="product-description">@Model.Product.Product.Description</p>

        <hr class="hr">


        <div class="product-form">
            <div class="product-rating">
                <div class="star-rating">
                    @for(i = 0; i<Model.Product.Product.Review; i++)
                    {
                        <i class="fa-solid fa-star"></i>
                    }
                    @if (i < 5)
                    {
                        @for (int rest = i; rest < 5; rest++)
                        {
                            <i class="fa-regular fa-star"></i>
                        }
                    }
                </div>

                <a href="#" class="ratings">16 Ratings</a>
            </div>

            @if (Model.Product.Product.DiscountPrice is not null)
            {
                <p class="price">@Model.Product.Product.DiscountPrice</p>
                <p class="old-price">@Model.Product.Product.Price</p>
            }
            else
            {
                <p class="price">@Model.Product.Product.Price</p>
            }

            <div class="add-amount">
                <div class="counter">
                    <button class='counter-btn left' type='button'>+</button>
                    <p class='count-amount'>2</p>
                    <button class='counter-btn right' type='button'>-</button>
                </div>

                <div class="btn-container">
                    <button class="theme-button add-cart">Add To Cart <i class="fa-light fa-cart-arrow-down"></i></button>
                </div>
            </div>

            <div class="availability">
                <i class="fa-solid fa-circle circle-color"></i>
                <p class="availability-text">SKU: N/A</p>
            </div>

            <button class="light-button whishlist-btn">Add To Whishlist</button>

            <p class="product-category">Category : @foreach (var category in Model.Product.Categories)
                {
                    <span class="product-category">@category.Category.ToString()</span>
                } @if (Model.Product.Product.IsNew == true)
                {
                    <span class="product-category">New</span>
                }</p>
        </div>
    </div>
</div>
<!-- product specifications end -->
