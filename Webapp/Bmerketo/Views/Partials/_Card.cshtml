@model CardModel

@{
    string cardSize = this.ViewData["CardSize"]?.ToString() ?? "card-image-small";
}

<div class="@cardSize card">
    <button class="card-link">
        <img class="image" alt="" src="@($"data:{Model.ImageMimeType};base64,{Model.ImageUrl}")">

        <div class="card-information">
            <h6 class="card-title">@Model.Title</h6>
            <div class="card-price">
            @if (Model.DiscountPrice != null)
            {
                <p class="price">$@Model.DiscountPrice</p>
                <p class="old-price">$@Model.Price</p>
            }
            else
            {
                <p class="price">$@Model.Price</p>
            }
            </div>
            <a href="#" class="to-cart"><i class="fa-light fa-cart-arrow-down"></i></a>
        </div>
    </button>
</div>
