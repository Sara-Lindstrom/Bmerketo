@model BreadcrumbViewModel

<div class="background-banner">
    <img class="background-image" src=@Model.ImageUrl alt="">

    <div class="banner-text">
        <section class="breadcrumb">
            <div class="container">
                <div class="content">
                    <h1 class="title">@Model.Title</h1>
                    <ul>
                        @foreach(var crumb in Model.Crumbs)
                        {
                            <li>@crumb</li>
                        }
                    </ul>
                </div>
            </div>
        </section>
    </div>
</div>